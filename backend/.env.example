# Application Config
FLASK_APP=app.main:app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///aqi_data.db
# For production (PostgreSQL): postgresql://username:password@localhost:5432/aqi_db

# API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
IQAIR_API_KEY=your_iqair_api_key_here

# Scheduler Settings
DATA_FETCH_INTERVAL_HOURS=1
MODEL_RETRAIN_INTERVAL_DAYS=7

# Model Configuration
MIN_TRAINING_SAMPLES=1000
TEST_SIZE=0.2
RANDOM_STATE=42

# Server Configuration
HOST=0.0.0.0
PORT=5000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
